<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.sch.smkn13bdg.adhi.brilinkadminarkan.TransaksiFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/edittransaksinokartu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nomor Kartu"
                android:inputType="text"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JENIS TRANSAKSI   : "/>

                <Spinner
                    android:id="@+id/spinnertransasijenistransaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/jenis_transaksi"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BANK TUJUAN        : "/>

                <Spinner
                    android:id="@+id/spinnertransasibank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/bank"
                    android:layout_weight="1"/>

            </LinearLayout>

            <EditText
                android:id="@+id/edittransaksitujuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="No Rekening Tujuan"
                android:inputType="number"
                android:textColor="@color/colorAccent"/>

            <EditText
                android:id="@+id/edittransaksinominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nominal"
                android:textStyle="bold"
                android:inputType="number"
                android:textColor="@color/colorAccent"/>

            <Button
                android:id="@+id/btntransaksiscan"
                android:layout_marginTop="40dp"
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan Kartu" />

            <Button
                android:id="@+id/btntransasiproses"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROSES" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>

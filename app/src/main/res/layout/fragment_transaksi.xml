<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.sch.smkn13bdg.adhi.brilinkadminarkan.modultransaksi.TransaksiFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/edittransaksinokartu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nomor Kartu"
                android:inputType="text"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edittransaksitujuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="No Rekening Tujuan"
                android:inputType="number"
                android:textColor="@color/colorAccent"/>

            <EditText
                android:id="@+id/edittransaksinominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nominal"
                android:textStyle="bold"
                android:inputType="number"
                android:textColor="@color/colorAccent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <Spinner
                    android:id="@+id/spinnertransasijenistransaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/jenis_transaksi"
                    android:layout_weight="1"/>

                <Spinner
                    android:id="@+id/spinnertransasibank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/bank"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BIAYA ADMINISTRASI"
                android:textColor="@color/colorAccent"
                android:textSize="12dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/txttarif"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="---"
                    android:textColor="@color/colorAccent"
                    android:textSize="27dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edittransaksitarif"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Manual"
                    android:textSize="18dp"
                    android:inputType="number"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>

            <Button
                android:id="@+id/btntransaksiscan"
                android:layout_marginTop="20dp"
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan Kartu" />

            <Button
                android:id="@+id/btntransasiproses"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROSES" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/listidhadiah"
        android:layout_alignParentStart="true"
        android:padding="14dp"
        android:layout_marginTop="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            >

            <TextView
                android:id="@+id/listtransnokartu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/listtransbank"
                android:text="nokartu"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/listtransjenistrans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/listtranskid"
                android:layout_marginStart="68dp"
                android:layout_toEndOf="@+id/listtranskid"
                android:text="jenis"
                android:textColor="@color/place_autocomplete_prediction_secondary_text"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/listtransbank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/listtransnokartu"
                android:layout_marginStart="38dp"
                android:layout_marginTop="4dp"
                android:text="Bank"
                android:textColor="@color/place_autocomplete_prediction_secondary_text"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/listtranskid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/listtransnokartu"
                android:layout_alignBottom="@+id/listtransnokartu"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/listtransrek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/listtransbank"
                android:layout_marginStart="9dp"
                android:layout_toEndOf="@+id/listtransbank"
                android:text="rek"
                android:textColor="@color/place_autocomplete_prediction_secondary_text"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/listtransnominal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/listtransjenistrans"
                android:layout_alignTop="@+id/listtransrek"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

